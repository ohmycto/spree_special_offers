<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t("special_offers") %></h1>

<%= form_tag(admin_special_offers_path, :method => :put) do %>
  <p>
    <%= label_tag 'preferences[enabled]', t('enable_special_offers') %>:
    <%= check_box_tag 'preferences[enabled]', '1', Spree::SpecialOffers::Config[:enabled] %>
  </p>
  <p>
    <%= label_tag 'preferences[block_name]', t('special_offers_block_name') %>:<br />
    <%= text_field_tag 'preferences[block_name]', Spree::SpecialOffers::Config[:block_name] %>
  </p>
  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_special_offers_url %>
  </p>
<% end %>